@using InnovaSchool.Helpers
@model IEnumerable<InnovaSchool.Models.SolAdquisicionDet>

<div>
    <div class="panel panel-default">
        <div class="panel-heading">Artículos</div>
        <table class="table table-hover">
            <thead class="media-heading">
                <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Unidad de Medida</th>
                    <th>Cantidad</th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody class="media-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CodArticulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescArticulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                    <td>@Html.DisplayFor(modelItem => item.CodUniMedida)</td>
                    <td></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>