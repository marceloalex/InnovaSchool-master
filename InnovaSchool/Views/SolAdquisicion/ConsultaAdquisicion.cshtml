@using InnovaSchool.Helpers
@model IEnumerable<InnovaSchool.Models.GrillaSolAdquisicion>

@{
    ViewBag.Title = "Solicitud de Adquisición";
}

<div class="content-body">
    <h2>@ViewBag.Title.</h2>

    <div class="panel panel-default">
        <div class="panel-heading">Listado de Adquisiciones</div>
        <table class="table">
            <tr>
                <th>Código</th>
                <th>Solicitante</th>
                <th>Area</th>
                <th>Fecha de Emisión</th>
                <th>Estado</th>
                <th>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Nueva Solicitud", "NuevoAdquisicion", "SolAdquisicion", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Solicitante)</td>
                    <td>@Html.DisplayFor(modelItem => item.Area)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEmision)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <div class="pull-right">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Solicitud de Adquisicion - Editar", "EditarAdquisicion", "SolAdquisicion", routeValues: new { id = item.Codigo }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Solicitud de Adquisición", "VerAdquisicion", "SolAdquisicion", routeValues: new { id = item.Codigo }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Solicitud de Adquisicion - Eliminar", "EliminarAdquisicion", "SolAdquisicion", routeValues: new { id = item.Codigo }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>